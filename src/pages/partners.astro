---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import DiscountPartners from '../components/DiscountPartners.astro';
import DiscountHowTo from '../components/DiscountHowTo.astro';
import '../styles/pages/discounts.css';
---

<!DOCTYPE html>
<html lang="en">

<head>
    <BaseHead title="Member Discounts & Benefits | T.S.K.V. Spartacus" description="Exclusive discounts and special offers for T.S.K.V. Spartacus members. Save on nutrition, restaurants, recovery services, and more with your Spartacus membership." />
</head>

<body>
    <!-- Header -->
    <Header />

    <!-- Hero Section -->
    <section class="hero discount-hero">
        <div class="container">
            <h1>EXCLUSIVE MEMBER DISCOUNTS</h1>
            <h2>SAVE MONEY WITH YOUR SPARTACUS MEMBERSHIP</h2>
        </div>
    </section>

    <!-- Main Content -->
    <main>
        <div class="container">
            <!-- Introduction -->
            <section class="section">
                <h2 class="section-title">MEMBER BENEFITS & PARTNER DISCOUNTS</h2>
                <p class="section-intro">As a T.S.K.V. Spartacus member, you gain access to exclusive discounts from our partner businesses. Your €25 membership fee pays for itself with these valuable savings on nutrition, recovery services, dining, and more.</p>
                <div class="value-badge">
                    <div class="value-badge-inner">SAVE €€€</div>
                </div>
            </section>

            <!-- Discount Partners Section -->
            <section class="section">
                <h2 class="section-title">OUR PARTNERS</h2>
                <DiscountPartners />
            </section>

            <!-- How to Access Section -->
            <section class="section">
                <h2 class="section-title">HOW TO ACCESS YOUR DISCOUNTS</h2>
                <DiscountHowTo />
            </section>

            <!-- Call to Action -->
            <section class="discount-cta">
                <div class="discount-cta-content">
                    <h2>BECOME A MEMBER TODAY</h2>
                    <p>Join Spartacus to access these exclusive discounts and many more benefits!</p>
                    <a href="/become-a-member" class="btn">JOIN NOW</a>
                </div>
            </section>
        </div>
    </main>

    <!-- Footer -->
    <Footer />
</body>
</html>