<!-- Spartacus Signup Form Component -->
<style>
/* Spartacus Color Variables */
:root {
    --spartacus-red: #ba131a;
    --spartacus-yellow: #e7c55e;
    --spartacus-burgundy: #37001b;
    --light-gray: #f6f6f6;
    --medium-gray: #e0e0e0;
    --dark-gray: #333333;
}

/* Form Container */
.spartacus-form-container {
    max-width: 800px;
    margin: 40px auto;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

/* Form Header */
.spartacus-form-header {
    background-color: var(--spartacus-burgundy);
    color: white;
    padding: 20px 30px;
    text-align: center;
    position: relative;
}

.spartacus-form-header h1 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 26px;
    text-transform: uppercase;
    margin: 0;
    color: var(--spartacus-yellow);
}

.spartacus-form-header p {
    margin-top: 10px;
    font-size: 14px;
    font-family: 'Montserrat', sans-serif;
}

.spartacus-logo-container {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 70px;
    height: auto;
}

.spartacus-logo-container img {
    width: 100%;
    height: auto;
}

/* Form Content */
.spartacus-form-content {
    padding: 30px;
}

/* Override CWF default styles for better appearance */
#cwfForm {
    position: relative;
    font-family: 'Montserrat', sans-serif;
}

/* Grid layout for the form */
#cwfForm .grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 20px;
}

/* Style form elements */
#cwfForm .textDiv {
    grid-column: 1 / -1;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 26px;
    color: var(--spartacus-burgundy);
    margin: 15px 0;
}

#cwfForm .element-group-container {
    margin-bottom: 15px;
}

#cwfForm .inputLabel {
    font-weight: 500;
    margin-bottom: 5px;
    color: var(--spartacus-burgundy);
    display: block;
}

#cwfForm .inputDivWithLabel,
#cwfForm .inputDiv {
    margin-bottom: 10px;
}

/* Style form inputs */
#cwfForm input[type="text"],
#cwfForm input[type="number"],
#cwfForm input[type="email"],
#cwfForm select {
    width: 100%;
    padding: 12px;
    border: 1px solid var(--medium-gray);
    border-radius: 4px;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    transition: border-color 0.3s ease;
}

#cwfForm input:focus,
#cwfForm select:focus {
    outline: none;
    border-color: var(--spartacus-red);
    box-shadow: 0 0 0 2px rgba(186, 19, 26, 0.2);
}

/* Style validation states */
#cwfForm .invalidValue {
    border-color: var(--spartacus-red) !important;
}

#cwfForm .invalidLabel {
    color: var(--spartacus-red);
    font-size: 12px;
    margin-top: 5px;
}

/* Custom submit button */
#cwfForm .submitButton {
    background-color: var(--spartacus-red);
    color: white;
    border: none;
    border-radius: 4px;
    padding: 14px 28px;
    font-family: 'Montserrat', sans-serif;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: background-color 0.3s;
    display: block;
    margin: 30px auto 10px;
    width: auto;
    min-width: 200px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

#cwfForm .submitButton:hover {
    background-color: #a01116;
}

/* Loading Indicator */
.spartacus-form-loader {
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.8);
    justify-content: center;
    align-items: center;
    z-index: 10;
}

.spartacus-loader {
    border: 5px solid var(--medium-gray);
    border-top: 5px solid var(--spartacus-red);
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Error Message */
.spartacus-form-error {
    display: none;
    background-color: #fff0f0;
    border-left: 4px solid var(--spartacus-red);
    color: var(--spartacus-red);
    padding: 15px;
    margin: 20px 0;
    border-radius: 4px;
}

/* Confirmation Screen */
.spartacus-confirmation-screen {
    display: none;
    text-align: center;
    padding: 40px 30px;
    font-family: 'Montserrat', sans-serif;
}

.spartacus-confirmation-screen h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 26px;
    color: var(--spartacus-burgundy);
    margin-bottom: 20px;
}

.spartacus-confirmation-screen p {
    font-size: 16px;
    margin-bottom: 30px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.spartacus-confirmation-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin-top: 30px;
}

.spartacus-btn {
    padding: 12px 25px;
    border-radius: 4px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 14px;
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
}

.spartacus-btn-primary {
    background-color: var(--spartacus-red);
    color: white;
}

.spartacus-btn-primary:hover {
    background-color: #a01116;
}

.spartacus-btn-secondary {
    background-color: var(--spartacus-yellow);
    color: var(--spartacus-burgundy);
}

.spartacus-btn-secondary:hover {
    background-color: #d3b44c;
}

.spartacus-social-links {
    margin-top: 40px;
}

.spartacus-social-links h3 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 18px;
    color: var(--spartacus-burgundy);
    margin-bottom: 15px;
}

.spartacus-social-icons {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.spartacus-social-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--spartacus-burgundy);
    color: white;
    border-radius: 50%;
    transition: transform 0.3s ease;
}

.spartacus-social-icon:hover {
    transform: scale(1.1);
}

/* Responsive Design */
@media (max-width: 768px) {
    .spartacus-form-container {
        margin: 20px auto;
        width: auto;
    }
    
    #cwfForm .grid-container {
        grid-template-columns: 1fr;
    }
    
    .spartacus-form-header {
        padding: 15px;
    }
    
    .spartacus-form-content {
        padding: 20px;
    }
    
    .spartacus-confirmation-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .spartacus-btn {
        width: 100%;
        max-width: 280px;
    }
}
</style>

<div class="spartacus-form-container">
    <div class="spartacus-form-header">
        <h1>Join Spartacus</h1>
        <p>Become a member of our community by filling out the form below</p>
        <div class="spartacus-logo-container">
            <img src="/images/spartacus-logo.png" alt="Spartacus Logo">
        </div>
    </div>
    
    <div class="spartacus-form-content">
        <div class="spartacus-form-error" id="spartacus-form-error"></div>
        
        <!-- Original form container - Do not change ID -->
        <div id="cwfForm">
            <!-- Form will be rendered here by CWF.MutateRelationForm -->
        </div>
        
        <!-- Loading Indicator -->
        <div class="spartacus-form-loader" id="spartacus-form-loader">
            <div class="spartacus-loader"></div>
        </div>
        
        <!-- Confirmation Screen (hidden initially) -->
        <div class="spartacus-confirmation-screen" id="spartacus-confirmation-screen">
            <h2>Welcome to Spartacus!</h2>
            <p>Thank you for joining our community! Your registration has been successfully submitted. We're excited to have you as a member.</p>
            <p>Check your email for more information about your membership and next steps.</p>
            
            <div class="spartacus-confirmation-buttons">
                <a href="/members/calendar" class="spartacus-btn spartacus-btn-primary">
                    <i class="far fa-calendar-alt"></i> View Members Calendar
                </a>
                <a href="/members/buddy-signup" class="spartacus-btn spartacus-btn-secondary">
                    <i class="fas fa-user-friends"></i> Join Buddy System
                </a>
            </div>
            
            <div class="spartacus-social-links">
                <h3>Follow Us on Social Media</h3>
                <div class="spartacus-social-icons">
                    <a href="https://instagram.com/spartacus" class="spartacus-social-icon" aria-label="Instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="https://facebook.com/spartacus" class="spartacus-social-icon" aria-label="Facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="https://twitter.com/spartacus" class="spartacus-social-icon" aria-label="Twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Wait for document to be ready
document.addEventListener('DOMContentLoaded', function() {
    initSpartacusForm();
});

function initSpartacusForm() {
    // Initialize the CWF form
    var cwf = new CWF();
    cwf.init();
    
    // Find submit button after form is rendered and attach event listener
    setTimeout(function() {
        const submitButton = document.querySelector('#cwfForm .submitButton');
        if (submitButton) {
            submitButton.addEventListener('click', function() {
                showSpartacusLoader();
            });
        }
    }, 1000);
    
    // Add event observers to handle form submission
    // Implementation of mutation observer to detect form completion
    // This is necessary because the original form doesn't have good hooks for completion events
    const formContainer = document.getElementById('cwfForm');
    const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
            // Check if form has been replaced with success message
            if (mutation.type === 'childList' && mutation.addedNodes.length) {
                const successMessage = formContainer.textContent.toLowerCase();
                if (successMessage.includes('success') || 
                    successMessage.includes('thank you') || 
                    successMessage.includes('received') ||
                    successMessage.includes('bedankt') ||
                    successMessage.includes('bevestiging')) {
                    hideSpartacusLoader();
                    showSpartacusConfirmation();
                }
            }
        });
    });
    
    observer.observe(formContainer, { childList: true, subtree: true });
}

function showSpartacusLoader() {
    const loader = document.getElementById('spartacus-form-loader');
    if (loader) loader.style.display = 'flex';
}

function hideSpartacusLoader() {
    const loader = document.getElementById('spartacus-form-loader');
    if (loader) loader.style.display = 'none';
}

function showSpartacusConfirmation() {
    document.getElementById('cwfForm').style.display = 'none';
    document.getElementById('spartacus-confirmation-screen').style.display = 'block';
    
    // Scroll to top of confirmation
    window.scrollTo(0, 0);
}

function showSpartacusErrorMessage(message) {
    const errorContainer = document.getElementById('spartacus-form-error');
    if (errorContainer) {
        errorContainer.textContent = message || 'Something went wrong. Please try again.';
        errorContainer.style.display = 'block';
    }
}
</script>
</main>

