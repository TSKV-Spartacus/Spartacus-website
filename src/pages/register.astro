<!-- Spartacus Signup Form Component -->
<style>
/* Spartacus Color Variables */
:root {
    --spartacus-red: #ba131a;
    --spartacus-yellow: #e7c55e;
    --spartacus-burgundy: #37001b;
    --light-gray: #f6f6f6;
    --medium-gray: #e0e0e0;
    --dark-gray: #333333;
    --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* Form Container */
.signup-container {
    max-width: 800px;
    margin: 40px auto;
    background-color: white;
    border-radius: 8px;
    box-shadow: var(--box-shadow);
    overflow: hidden;
}

/* Form Header */
.form-header {
    background-color: var(--spartacus-burgundy);
    color: white;
    padding: 20px 30px;
    text-align: center;
    position: relative;
}

.form-header h1 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 26px;
    text-transform: uppercase;
    margin: 0;
    color: var(--spartacus-yellow);
}

.form-header p {
    margin-top: 10px;
    font-size: 14px;
    font-family: 'Montserrat', sans-serif;
}

.logo-container {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 70px;
    height: auto;
}

.logo-container img {
    width: 100%;
    height: auto;
}

/* Form Content */
.form-content {
    padding: 30px;
}

/* Form Styling from CWF */
#spartacusSignupForm {
    position: relative;
    font-family: 'Montserrat', sans-serif;
}

#spartacusSignupForm .grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 20px;
}

#spartacusSignupForm .element-group-container {
    margin-bottom: 15px;
}

#spartacusSignupForm .inputLabel {
    font-weight: 500;
    margin-bottom: 5px;
    color: var(--spartacus-burgundy);
    display: block;
}

#spartacusSignupForm input[type="text"],
#spartacusSignupForm input[type="number"],
#spartacusSignupForm input[type="email"],
#spartacusSignupForm select {
    width: 100%;
    padding: 12px;
    border: 1px solid var(--medium-gray);
    border-radius: 4px;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    transition: border-color 0.3s ease;
}

#spartacusSignupForm input:focus,
#spartacusSignupForm select:focus {
    outline: none;
    border-color: var(--spartacus-red);
    box-shadow: 0 0 0 2px rgba(186, 19, 26, 0.2);
}

#spartacusSignupForm .inputDivWithLabel {
    margin-bottom: 5px;
}

#spartacusSignupForm .invalidValue {
    border-color: var(--spartacus-red) !important;
}

#spartacusSignupForm .invalidLabel {
    color: var(--spartacus-red);
    font-size: 12px;
    margin-top: 5px;
}

#spartacusSignupForm .textDiv {
    grid-column: 1 / -1;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 26px;
    color: var(--spartacus-burgundy);
    margin: 15px 0;
}

/* Submit Button */
#spartacusSignupForm .submitButton {
    background-color: var(--spartacus-red);
    color: white;
    border: none;
    border-radius: 4px;
    padding: 14px 28px;
    font-family: 'Montserrat', sans-serif;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: background-color 0.3s;
    display: block;
    margin: 30px auto 10px;
    width: auto;
    min-width: 200px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

#spartacusSignupForm .submitButton:hover {
    background-color: #a01116;
}

/* Loading Indicator */
#form-loader {
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.8);
    justify-content: center;
    align-items: center;
    z-index: 10;
}

.loader {
    border: 5px solid var(--medium-gray);
    border-top: 5px solid var(--spartacus-red);
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Error Message */
#form-error {
    display: none;
    background-color: #fff0f0;
    border-left: 4px solid var(--spartacus-red);
    color: var(--spartacus-red);
    padding: 15px;
    margin: 20px 0;
    border-radius: 4px;
}

/* Confirmation Screen */
#confirmation-screen {
    display: none;
    text-align: center;
    padding: 40px 30px;
    font-family: 'Montserrat', sans-serif;
}

#confirmation-screen h2 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 26px;
    color: var(--spartacus-burgundy);
    margin-bottom: 20px;
}

#confirmation-screen p {
    font-size: 16px;
    margin-bottom: 30px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.confirmation-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin-top: 30px;
}

.btn {
    padding: 12px 25px;
    border-radius: 4px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 14px;
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-primary {
    background-color: var(--spartacus-red);
    color: white;
}

.btn-primary:hover {
    background-color: #a01116;
}

.btn-secondary {
    background-color: var(--spartacus-yellow);
    color: var(--spartacus-burgundy);
}

.btn-secondary:hover {
    background-color: #d3b44c;
}

.social-links {
    margin-top: 40px;
}

.social-links h3 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 18px;
    color: var(--spartacus-burgundy);
    margin-bottom: 15px;
}

.social-icons {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.social-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--spartacus-burgundy);
    color: white;
    border-radius: 50%;
    transition: transform 0.3s ease;
}

.social-icon:hover {
    transform: scale(1.1);
}

/* Responsive Design */
@media (max-width: 768px) {
    .signup-container {
        margin: 20px auto;
        width: auto;
    }
    
    #spartacusSignupForm .grid-container {
        grid-template-columns: 1fr;
    }
    
    .form-header {
        padding: 15px;
    }
    
    .form-content {
        padding: 20px;
    }
    
    .confirmation-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .btn {
        width: 100%;
        max-width: 280px;
    }
}
</style>

