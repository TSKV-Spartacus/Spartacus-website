---
import '../styles/Components/header.css';
---

<header class="spartacus-header">
    <div class="header-container">
        <div class="logo-section">
            <a href="/" class="logo">
                <div class="desktop-logo">
                    <img src="/images/spartacus-logo.png" alt="Spartacus Logo" class="logo-image">
                    <span class="logo-text">T.S.K.V. <span class="highlight">Spartacus</span></span>
                </div>
                <div class="mobile-logo">
                    <img src="/images/spartacus-logo.png" alt="Spartacus Logo" class="mobile-logo-image">
                    <span class="mobile-logo-text">Spartacus</span>
                </div>
            </a>
        </div>

        <nav class="main-navigation">
            <ul class="nav-menu">
                <li><a href="/" class="nav-link">Home</a></li>
                <li><a href="/about" class="nav-link">About</a></li>
                <li><a href="/strenghtsports" class="nav-link">Strenghtsports</a></li>
                <li><a href="/become-a-member" class="nav-link">Membership</a></li>
                <li><a href="/committee" class="nav-link">Committees</a></li>
                <li><a href="https://merch.tskvspartacus.nl/" target="_blank" class="nav-link">Webshop</a></li>
                <li><a href="/contact" class="nav-link">Contact</a></li>
                <li class="mobile-join-link">
                    <a href="/register" class="nav-link mobile-join-button">Join Spartacus</a>
                </li>
            </ul>
        </nav>

        <div class="header-actions">
            <a href="/register" class="btn btn-primary desktop-join">Join Spartacus</a>
            <button class="mobile-menu-toggle" aria-label="Toggle mobile menu">
                <span class="hamburger-icon"></span>
            </button>
        </div>
    </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
        const navigation = document.querySelector('.main-navigation');
        const dropdowns = document.querySelectorAll('.dropdown');

        // Mobile menu toggle
        mobileMenuToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            navigation.classList.toggle('active');
            mobileMenuToggle.classList.toggle('active');
        });

        // Dropdown functionality
        dropdowns.forEach(dropdown => {
            const dropdownToggle = dropdown.querySelector('.nav-link');
            dropdownToggle.addEventListener('click', (e) => {
                if (window.innerWidth <= 768) {
                    e.preventDefault();
                    dropdown.classList.toggle('show-dropdown');
                }
            });
        });

        // Close mobile menu when a link is clicked
        const navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(link => {
            link.addEventListener('click', () => {
                navigation.classList.remove('active');
                mobileMenuToggle.classList.remove('active');
                dropdowns.forEach(dropdown => {
                    dropdown.classList.remove('show-dropdown');
                });
            });
        });

        // Close dropdowns and mobile menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.dropdown') && !e.target.closest('.mobile-menu-toggle')) {
                dropdowns.forEach(dropdown => {
                    dropdown.classList.remove('show-dropdown');
                });
                navigation.classList.remove('active');
                mobileMenuToggle.classList.remove('active');
            }
        });
    });
</script>