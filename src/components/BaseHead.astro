---
// Define props the component will accept
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "T.S.K.V. Spartacus - Student Strength Sports Association",
  description = "The largest student strength sports association in the Benelux, promoting powerlifting, bodybuilding, and fitness among students at Tilburg University."
} = Astro.props;
---

<!-- Common head elements -->
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{title}</title>
<meta name="description" content={description}>

<!-- Stylesheets -->
<link rel="stylesheet" href="/styles.css">

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
