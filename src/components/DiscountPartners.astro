---
// src/components/DiscountPartners.astro
---

<div class="discount-grid">
    <!-- Bossers Vlees -->
    <div class="discount-card">
        <div class="discount-header">
            <div class="discount-logo-container">
                <img src="/images/logos/bossers-vlees-logo.png" alt="Bossers Vlees Logo" class="discount-logo">
            </div>
            <div class="discount-badge">10-15% OFF</div>
        </div>
        <div class="discount-body">
            <h3 class="discount-title">BOSSERS VLEES</h3>
            <p class="discount-description">Premium quality meat at discounted prices, perfect for hitting your protein goals while on a student budget.</p>
            
            <h4 class="discount-subtitle">YOUR BENEFITS</h4>
            <ul class="discount-benefits-list">
                <li>Get restaurant wholesale prices (10-15% off retail)</li>
                <li>High-quality protein sources</li>
                <li>Wide selection of meats</li>
            </ul>
            
            <div class="discount-button-container">
                <a href="https://www.google.com/maps/search/Bossers+Vlees/@51.5638125,4.9049807,11z" target="_blank" class="btn btn-secondary discount-btn">
                    <i class="fas fa-map-marker-alt"></i> FIND LOCATION
                </a>
            </div>
        </div>
    </div>
    
    <!-- Physiofitaal -->
    <div class="discount-card">
        <div class="discount-header">
            <div class="discount-logo-container">
                <img src="/images/logos/physiofitaal-logo.png" alt="Physiofitaal Logo" class="discount-logo">
            </div>
            <div class="discount-badge">SPECIAL RATES</div>
        </div>
        <div class="discount-body">
            <h3 class="discount-title">PHYSIOFITAAL</h3>
            <p class="discount-description">Professional physiotherapy services specializing in sports injuries and recovery for strength athletes.</p>
            
            <h4 class="discount-subtitle">YOUR BENEFITS</h4>
            <ul class="discount-benefits-list">
                <li>Special rates for Spartacus members</li>
                <li>Sports-specific injury treatment</li>
                <li>Recovery and prevention services</li>
            </ul>
            
            <div class="discount-button-container">
                <a href="https://fysiofitaal.nl/" target="_blank" class="btn btn-secondary discount-btn">
                    <i class="fas fa-external-link-alt"></i> VISIT WEBSITE
                </a>
            </div>
        </div>
    </div>
    
    <!-- O'Cafe -->
    <div class="discount-card featured-discount">
        <div class="discount-header">
            <div class="discount-logo-container">
                <img src="/images/logos/ocafe-logo.svg" alt="O'Cafe Logo" class="discount-logo">
            </div>
            <div class="discount-badge">10% OFF</div>
        </div>
        <div class="discount-body">
            <h3 class="discount-title">O'CAFE</h3>
            <p class="discount-description">Student-friendly cafe close to campus offering drinks, snacks, and a perfect place to socialize.</p>
            
            <h4 class="discount-subtitle">YOUR BENEFITS</h4>
            <ul class="discount-benefits-list">
                <li>10% discount on beer and soda every Wednesday</li>
                <li>Great location near university</li>
                <li>Perfect for post-training social gatherings</li>
            </ul>
            
            <div class="discount-button-container">
                <a href="https://www.olympiasportsbar.nl/" target="_blank" class="btn btn-secondary discount-btn">
                    <i class="fas fa-external-link-alt"></i> VISIT WEBSITE
                </a>
            </div>
        </div>
    </div>
    
    <!-- Sport Center Entry -->
    <div class="discount-card">
        <div class="discount-header">
            <div class="discount-logo-container">
                <img src="/images/logos/Tilburg-University-logo.png" alt="Tilburg University Logo" class="discount-logo">
            </div>
        </div>
        <div class="discount-body">
            <h3 class="discount-title">SPORT CENTER</h3>
            <p class="discount-description">All of our trainings happen in sport center</p>

            <div class="discount-button-container">
                <a href="https://www.tilburguniversity.edu/nl/campus/sports-center" class="btn btn-secondary discount-btn" target="_blank">
                    <i class="fas fa-external-link-alt"></i> VISIT WEBSITE
                </a>
            </div>
        </div>
    </div>


    <!-- FOSST Entry -->
    <div class="discount-card">
        <div class="discount-header">
            <div class="discount-logo-container">
                <img src="/images/logos/fosst-logo.png" alt="FOSST Logo" class="discount-logo">
            </div>
        </div>
        <div class="discount-body">
            <h3 class="discount-title">FOSST</h3>
            <p class="discount-description">FOSST is there for everyone in sport center, wether your member of spartacus or not!</p>
            <div class="discount-button-container">
                <a href="https://fosst.nl" class="btn btn-secondary discount-btn" target="_blank">
                    <i class="fas fa-external-link-alt"></i> VISIT WEBSITE
                </a>
            </div>
        </div>
    </div>
</div>